<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ocr_settings_coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/ocr_settings_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/color_primary"
        app:title="自动OCR"
        app:titleTextAppearance="@style/AppTheme.ActionBar.TitleTextStyle" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/ocr_settings_nested_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="?attr/actionBarSize"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/auto_ocr_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/auto_ocr_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="通过谷歌的ML Kit插件在本地对图库中的图像执行自动OCR" />

            <RadioGroup
                android:id="@+id/ocr_scope"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/ocr_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="所有图片"
                    android:checked="true" />

                <RadioButton
                    android:id="@+id/ocr_selected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="仅选中的图片" />
            </RadioGroup>

            <TextView
                android:id="@+id/ocr_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/ocr_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开始识别"
                    android:layout_marginEnd="8dp"/>

                <Button
                    android:id="@+id/ocr_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="取消识别"
                    android:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="处理进度："
                    android:textSize="16sp"
                    android:layout_marginEnd="8dp"/>

                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:id="@+id/ocr_progress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:indeterminate="false"
                    android:max="100"
                    android:progress="0"
                    app:trackCornerRadius="4dp" />
            </LinearLayout>


            <TextView
                android:id="@+id/ocr_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="准备就绪" />

<!--            <EditText-->
<!--                android:id="@+id/ocr_caption"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginTop="16dp"-->
<!--                android:hint="请输入字幕"-->
<!--                android:inputType="textMultiLine"-->
<!--                android:minLines="3" />-->

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
